/**index.wxss**/
.home-page-container,
.home-page-header {
  display: block;
  padding: 0 24rpx;
}
.home-page-header .search-container {
  background-color:#eee;
  flex: 2;
  border-radius: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  margin-bottom: 14rpx;
}
.home-page-header .search-container .placeholderStyle{
  color: rgb(116, 116, 116);
  font-size: 24rpx;
}

.home-page-header .icon-small {
  width: 40rpx;
  height: 40rpx;
  padding: 15rpx 18rpx 10rpx 24rpx;
  vertical-align: middle;
}

.home-page-header .search-input {
  display: inline-block;
  vertical-align: middle;
  width: calc(100% - 88rpx);
  font-size: 32rpx !important;
}
.swiper image {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}